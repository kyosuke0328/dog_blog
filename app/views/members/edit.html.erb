<h1 class="text-center">プロフィール編集</h1>
<div class="container">
    <div class="row">
        <div class="col-lg-3">
        </div>
        <div class="col-lg-6">
            <%= form_for(@member) do |f| %>
                <div class="form-group">
                   <%= f.label :profile_image, '画像' %>
                   <%= f.attachment_field :profile_image, class: 'form-control' %>
                </div>
                <div class="form-group">
                    <%= f.label :name, '名前' %>
                    <%= f.text_field :name, class: 'form-control' %>
                </div>
                <div class="form-group">
                    <%= f.label :introduction, 'ひとこと' %>
                    <%= f.text_area :introduction, class: 'form-control' %>
                </div>
                <p class="text-center">
                    <%= f.submit '更新', class: 'btn btn-success btn btn--success btn--radius btn--cubic' %>
                </p>
            <% end %>
        </div>
    </div>
</div>