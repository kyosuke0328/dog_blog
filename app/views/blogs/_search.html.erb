<div id="search">
	<h3 class="text-center" id="border"><i class="fas fa-search"></i>検索</h3>
	<div class="search-box"></div>
	<%= form_with url: search_blogs_path, method: :get, local: true do |f| %>
	  	<div class="form-group">
			<%= f.text_field :word, class: 'text-center form-control',placeholder:"キーワードを入力" %>
		</div>
	  	<div class="form-group text-center">
	  		<%= f.select :category, Blog.categories_i18n.keys.map {|k| [Blog.categories_i18n[k], k]}, { include_blank: 'カテゴリー検索'} %>
	 	</div>
		<div class="text-center">
			<%= f.submit :"検索", class: "btn btn--black btn--circle btn--circle-a btn--shadow" %>
		</div>
	<% end %>
</div>
