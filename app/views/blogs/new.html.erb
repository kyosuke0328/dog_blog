<body>
    <h1 class="text-center" id="new">Blog投稿</h1>
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
            </div>
            <div class="col-lg-6 b-login">
                <div class="b-login2">
                    <%= form_for(@blog) do |f| %>
                        <div class="form-group">
                           <%= f.label :image, '画像' %>
                           <%= f.attachment_field :image, class: 'form-control input-lg' %>
                        </div>
                        <div class="form-group">
                            <%= f.label :title, 'タイトル' %>
                            <%= f.text_field :title, placeholder:"30文字以下で入力してください", class: 'form-control'  %>
                        </div>
                        <div class="form-group">
                            <%= f.label :body, '本文' %>
                            <%= f.text_area :body,placeholder:"入力してください", class: 'form-control' %>
                        </div>
                        <div class="form-group">
                            <%= f.label :category, 'カテゴリー' %><br>
                            <%= f.select :category, Blog.categories_i18n.keys.map {|k| [Blog.categories_i18n[k], k]}, { include_blank: '必ず選択してください'} %>
                        </div>
                        <p class="text-center new2">
                            <%= f.submit '投稿する', class: "btn btn--blue btn--border-outset" %>
                        </p>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</body>