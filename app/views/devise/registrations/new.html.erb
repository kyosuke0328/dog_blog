<body id="new">
  <div class="container">
    <div class="row">
      <div class="col-lg-4"></div>
      <div class="col-lg-4 login">
        <div class="login2">
          <h2 class="text-center">新規登録</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="item-image">
              <%= attachment_image_tag resource, :profile_image, id: "member_img_prev", fallback: "no_image.jpg", size: "300x300" %>
            </div>
            <div class="form-group new2">
              <%= f.label :プロフィール画像 %><br />
              <%= f.attachment_field :profile_image, class: 'form-control input-lg', id: "member_image" %>
            </div>

            <div class="form-group">
              <%= f.label :ユーザーネーム %><br />
              <%= f.text_field :name, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :メールアドレス %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control'  %>
            </div>

            <div class="form-group">
              <%= f.label :パスワード %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %>文字以上)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :パスワード再確認 %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
            </div>

            <div class="actions text-center">
              <%= f.submit "新規登録", class:'btn btn--blue btn--border-outset' %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</body>

