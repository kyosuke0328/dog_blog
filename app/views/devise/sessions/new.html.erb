<body id="new">
  <div class="container">
    <div class="row">
      <div class="col-lg-4"></div>
      <div class="col-lg-4 login">
        <div class="login2">
          <h2 class="text-center">ログイン</h2>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group new2">
              <%= f.label :ユーザーネーム  %><br />
              <%= f.text_field :name,placeholder:"入力してください", class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :パスワード %><br />
              <%= f.password_field :password,placeholder:"入力してください", autocomplete: "current-password", class: 'form-control' %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-group">
                <%= f.check_box :remember_me %>
                <%= f.label :ログインを記憶する %>
              </div>
            <% end %>

            <div class="actions">
              <%= f.submit "ログイン", class:'btn btn--blue btn--border-outset' %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</body>
